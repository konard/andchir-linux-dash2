# Example Nginx configuration for Linux Dash with Python 3 server
#
# This configuration sets up nginx as a reverse proxy for the Python 3 server
# and includes basic authentication for security.
#
# Usage:
# 1. Start the Python server: python3 app/server/server_py3.py --port 8080
# 2. Copy this file to /etc/nginx/sites-available/linux-dash
# 3. Create a symlink: sudo ln -s /etc/nginx/sites-available/linux-dash /etc/nginx/sites-enabled/
# 4. Create htpasswd file: sudo htpasswd -c /etc/nginx/.htpasswd-linux-dash yourusername
# 5. Test nginx config: sudo nginx -t
# 6. Reload nginx: sudo systemctl reload nginx

server {
    listen 80;
    server_name example.com;  # Replace with your domain or IP

    # Optional: Redirect HTTP to HTTPS
    # return 301 https://$server_name$request_uri;

    location / {
        # Basic authentication for security
        auth_basic "Linux Dash Monitoring";
        auth_basic_user_file /etc/nginx/.htpasswd-linux-dash;

        # Proxy settings
        proxy_pass http://127.0.0.1:8080;
        proxy_http_version 1.1;

        # WebSocket support (for future use)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Forward original request headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Timeouts
        proxy_connect_timeout 120s;
        proxy_send_timeout 120s;
        proxy_read_timeout 120s;

        # Buffering settings
        proxy_buffering off;
    }
}

